<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.devesh.humanresourcemanager.choose">

    <Button
        android:id="@+id/buy_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/white"
        android:text="BUY"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sell_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buy_but"
        android:layout_marginStart="22dp"
        android:layout_marginTop="127dp"
        android:background="@android:color/white"
        android:text="Sell"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sell_but"
        android:layout_alignBottom="@+id/sell_but"
        android:layout_alignEnd="@+id/buy_but"
        android:text="Sell Services/Product"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buy_but"
        android:layout_marginTop="12dp"
        android:text="Buy Services/Product"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

</RelativeLayout>
